<?php
if(isset($_POST["iniciar"]))
{
    
    
    include_once '../dbConnection.php';

    $password=addslashes(trim($_POST['pass']));
    $user=addslashes(trim($_POST['user']));



    $user = addslashes($user); 
    $password = addslashes($password);
    $password=md5($password); 
    $result = mysqli_query($con,"SELECT cuenta, pasword FROM usuarios WHERE cuenta='$user' and pasword='$password'") or die('Error'.mysqli_error($con));
    $count=mysqli_num_rows($result);
    if($count==1){
    while($row = mysqli_fetch_array($result)) {
      $name = $row['cuenta'];
      
    }
    session_start();
    $_SESSION["user"] = $name;


     header("location:index.php");
    }
    else
    {
    echo "Error:Usuario o contraseña incorrecta";
    }
 }   

?>
