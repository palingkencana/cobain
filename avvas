<script>
    let imagenes = ["/images/ampaInfografia2025.jpg", "/images/portadaGen.jpg"]; // Array de imágenes
    let indice = 0;


    function cambiarImagen() {
        var imgElement = document.getElementById("fullResImage");
        imgElement.style.opacity = 0; // Aplica fade out

        setTimeout(() => {
            indice = (indice + 1) % imagenes.length; // Cambia la imagen
            imgElement.src = imagenes[indice];
            imgElement.style.opacity = 1; // Aplica fade in
        }, 1000); // Espera el tiempo del fade out (1s)
    }

    setInterval(cambiarImagen, 4000); // Cambia la imagen cada 5 segundos
</script>

