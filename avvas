							<?php
                            try {
                                // Prepare the query for featured news
                                $stmt = $pdo->prepare("
        SELECT n.id, n.titular, n.descp, n.fotoPortada, 
               DAY(n.data) AS dia, 
               MONTH(n.data) AS mes, 
               YEAR(n.data) AS any, 
               u.nom
        FROM noticies n
        INNER JOIN usuaris u ON n.editor = u.id
        WHERE n.actiu = 1
        ORDER BY n.data DESC
        LIMIT 6
    ");

                                $stmt->execute();
                                $i = 0;

                                while($destacat = $stmt->fetch(PDO::FETCH_ASSOC)) {
                                    echo '<div class="col-md-4 blog-item">
                <div class="blog-one">
                    <div class="blog-img">
                        <a href="noticia.php?id=' . htmlspecialchars($destacat['id']) . '">
                            <img alt="" src="images/noticies/' . htmlspecialchars($destacat['id']) . '/' . htmlspecialchars($destacat['fotoPortada']) . '">
                        </a>
                        <div class="blog-date">
                            <span>' . htmlspecialchars($destacat['dia']) . '</span>
                            <span>' . htmlspecialchars($mesosAny[($destacat['mes']-1)]) . ', ' . htmlspecialchars($destacat['any']) . '</span>
                        </div>
                    </div><!-- End blog-img -->
                    <div class="blog-content">
                        <h6>
                            <a href="noticia.php?id=' . htmlspecialchars($destacat['id']) . '">' . htmlspecialchars($destacat['titular']) . '</a>
                        </h6>
                        <p align="justify">' . $destacat['descp'] . '... 
                            <a href="noticia.php?id=' . htmlspecialchars($destacat['id']) . '">Llegir més</a>
                        </p>
                    </div><!-- End blog-content -->
                    <div class="blog-meta">
                        <div class="blog-author">
                            <i class="fa fa-user"></i>Autor : ' . htmlspecialchars($destacat['nom']) . '
                        </div>
                    </div><!-- End blog-meta -->
                    <div class="clearfix"></div>
                </div><!-- End blog-item -->
            </div>';

                                    if($i==2) {
                                        echo '<div class="clearfix"></div>';
                                        $i=0;
                                    } else {
                                        $i++;
                                    }
                                }

                            } catch(PDOException $e) {
                                error_log("Database error: " . $e->getMessage());
                                echo "An error occurred while fetching the featured news.";
                            }

                            ?>
						
					<!-- End blog-silde -->
				</div>
